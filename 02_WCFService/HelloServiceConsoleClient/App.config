<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>


	<system.serviceModel>
		<bindings>

			<basicHttpBinding>
				<binding name="BasicHttpBinding_IHelloService" />
			</basicHttpBinding>
		</bindings>


		<client>
			<endpoint address="http://localhost:5000/FakeHelloService" 
					  binding="basicHttpBinding"
					  bindingConfiguration="BasicHttpBinding_IHelloService"
					  contract="IHelloServices.IHelloService"
					  name="BasicHttpBinding_IHelloService" />
			
		</client>
		
	</system.serviceModel>


	<appSettings>
		<add key="HelloServiceAddress" value="http://localhost:5000/FakeHelloService" />		
	</appSettings>

</configuration>